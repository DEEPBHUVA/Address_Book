@{
    ViewData["Title"] = "View Profile Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<div class="pagetitle">
    <h1>Student List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="MST_Student" asp-action="Index">Student List</a></li>
            <li class="breadcrumb-item active"><a asp-controller="MST_Student" asp-action="ViewProfile">Profile</a></li>
        </ol>
    </nav>
</div>

@foreach (DataRow obj in Model.Rows)
{
    <section class="section profile">
        <div class="row">
            <div class="col-xl-4">
                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                        <img src="@Url.Content(obj["PhotoPath"].ToString())" alt="@obj["StudentName"]" class="rounded-circle"/>
                        <h2>@obj["StudentName"]</h2>

                        <div class="social-links mt-2">
                            <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-xl-8">
                <div class="card">
                    <div class="card-body pt-3">
                        <!-- Bordered Tabs -->
                        <ul class="nav nav-tabs nav-tabs-bordered">
                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Profile</button>
                            </li>
                        </ul>

                        <div class="tab-content pt-2">

                            <div class="tab-pane fade show active profile-overview" id="profile-overview">


                                <h5 class="card-title">Details</h5>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label ">Full Name</div>
                                    <div class="col-lg-9 col-md-8">@obj["StudentName"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Email</div>
                                    <div class="col-lg-9 col-md-8">@obj["Email"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Contact No.</div>
                                    <div class="col-lg-9 col-md-8">@obj["MobileNoStudent"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">City</div>
                                    <div class="col-lg-9 col-md-8">@obj["CityName"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Address</div>
                                    <div class="col-lg-9 col-md-8">@obj["Address"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Branch</div>
                                    <div class="col-lg-9 col-md-8">@obj["BranchName"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Birth Date</div>
                                    <div class="col-lg-9 col-md-8">@Convert.ToDateTime(obj["BirthDate"]).ToString("dd-MM-yyyy")</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Age</div>
                                    <div class="col-lg-9 col-md-8">@obj["Age"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Gender</div>
                                    <div class="col-lg-9 col-md-8">@obj["Gender"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Father Contact No.</div>
                                    <div class="col-lg-9 col-md-8">@obj["MobileNoFather"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Create At</div>
                                    <div class="col-lg-9 col-md-8">@Convert.ToDateTime(obj["Created"]).ToString("dd-MM-yyyy")</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Modified</div>
                                    <div class="col-lg-9 col-md-8">@Convert.ToDateTime(obj["Modified"]).ToString("dd-MM-yyyy")</div>
                                </div>

                            </div>
                            

                           <hr/>

                            <div class="d-flex">

                                <div class="col-md-3">
                                    <form method="get" asp-area="MST_Student" asp-controller="MST_Student" asp-action="Add">
                                        <input type="hidden" name="StudentID" value="@Convert.ToInt32(obj["StudentID"].ToString())">
                                        <button type="submit" class="btn btn-primary">Edit</button>
                                    </form>
                                </div>

                                <div class="col-md-3">
                                    <form method="post" asp-area="MST_Student" asp-controller="MST_Student" , asp-action="Delete">
                                        <input type="hidden" name="StudentID" value="@Convert.ToInt32(obj["StudentID"])" />
                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')">Delete</button>
                                    </form>
                                </div>

                                <div class="col-md-3">
                                    <a asp-controller="MST_Student" asp-action="Cancle" class="btn btn-secondary">Cancle</a>
                                </div>
                               
                            </div>


                           


                        </div><!-- End Bordered Tabs -->

                    </div>
                </div>

            </div>
        </div>
    </section>
}


