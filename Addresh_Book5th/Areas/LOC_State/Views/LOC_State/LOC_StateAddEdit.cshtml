@{
    ViewData["Title"] = "State Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model Addresh_Book5th.Areas.LOC_State.Models.LOC_StateModel;

<div class="pagetitle">
    <h1>State Add/Edit</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a asp-controller="LOC_State" asp-action="Index">State List</a></li>
            <li class="breadcrumb-item active"><a asp-controller="LOC_State" asp-action="Add">Add</a></li>
        </ol>
    </nav>
</div>


<div class="card col-md-6">
    <div class="card-body p-3">
        <form method="post" asp-controller="LOC_State" asp-area="LOC_State" asp-action="Save">
            @Html.HiddenFor(x => x.StateID)
                
            <div class="form-group my-2">
                <label><span class="text-danger">*</span>Country Name</label>
                    @Html.DropDownListFor(m => m.CountryID, new SelectList(ViewBag.CountryList, "CountryID", "CountryName"), "Select Country", new { @class = "form-control" })
                    <span asp-validation-for="CountryID" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label><span class="text-danger">*</span>State Name</label>
                <input type="text" class="form-control" asp-for="StateName" placeholder="Enter State Name..." />
                <span asp-validation-for="StateName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>State Code</label>
                <input type="text" class="form-control" asp-for="StateCode" placeholder="Enter State Code..." />
                <span asp-validation-for="StateCode" class="text-danger"></span>
            </div>

            <hr />
            <input type="submit" class="btn btn-success"/>
            <a asp-controller="LOC_State" asp-action="Cancel" class="btn btn-primary">Cancle</a>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}