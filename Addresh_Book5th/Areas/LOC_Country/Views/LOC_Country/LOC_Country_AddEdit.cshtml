@{
    ViewData["Title"] = "Country Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model Addresh_Book5th.Areas.LOC_Country.Models.LOC_CountryModel;


<div class="pagetitle">
    <h1>Country Add/Edit</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a asp-controller="LOC_Country" asp-action="Index">Country List</a></li>
            <li class="breadcrumb-item active"><a asp-controller="LOC_Country" asp-action="Add">Add</a></li>
        </ol>
    </nav>
</div>


<div class="card col-md-6">
    <div class="card-body p-3">
        <form method="post" asp-controller="LOC_Country" asp-action="Save">
            @Html.HiddenFor(x => x.CountryID)

            <div class="form-group my-2">
                <label><span class="text-danger">*</span>Country Name</label>
                <input type="text" class="form-control" asp-for="CountryName" placeholder="Enter Country Name..." />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
              
            <div class="form-group">
                <label><span class="text-danger">*</span>Country Code</label>
                <input type="text" class="form-control" asp-for="CountryCode" placeholder="Enter Country Code..." />
                <span asp-validation-for="CountryCode" class="text-danger"></span>
            </div>
            <hr />
            <input type="submit" class="btn btn-success" value="Save" />
            <a asp-controller="LOC_Country" asp-action="Cancle" class="btn btn-primary">Cancle</a>
        </form>
    </div>
</div>