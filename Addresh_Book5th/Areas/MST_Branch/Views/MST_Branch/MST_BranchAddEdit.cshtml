@{
    ViewData["Title"] = "Branch Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model Addresh_Book5th.Areas.MST_Branch.Models.MST_BranchModel;

<div class="pagetitle">
    <h1>Branch Add/Edit</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="MST_Branch" asp-action="Index">Branch List</a></li>
            <li class="breadcrumb-item active"><a asp-controller="MST_Branch" asp-action="Add">Add</a></li>
        </ol>
    </nav>
</div>

<div class="card col-md-6">
    <div class="card-body p-3">
        <form method="post" asp-controller="MST_Branch" asp-action="Save">
            @Html.HiddenFor(x => x.BranchID)

            <div class="form-group">
                <label>Branch Name</label>
                <input type="text" class="form-control" asp-for="BranchName" placeholder="Enter Branch Name..." />
                <span asp-validation-for="BranchName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Branch Code</label>
                <input type="text" class="form-control" asp-for="BranchCode" placeholder="Enter Branch Code..." />
                <span asp-validation-for="BranchCode" class="text-danger"></span>
            </div>
            <hr />
            <input type="submit" class="btn btn-success" value="Save" />
            <a asp-controller="MST_Branch" asp-action="Cancel" class="btn btn-primary">Cancle</a>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}